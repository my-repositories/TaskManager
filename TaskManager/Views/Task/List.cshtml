@model System.Collections.Generic.List<TaskManager.Models.TaskModel>

<h1>Task List</h1>
<table class="table">
    <thead>
    <tr>
        <th>Status</th>
        <th>Created at</th>
        <th>Title</th>
        <th>Description</th>
        <th>Estimated time</th>
        <th>Lead time</th>
        <th>Responsible</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@Html.Partial("_TaskStatus", task.Status)</td>
            <td>@Html.Partial("_DateTimeView", task.CreatedAt)</td>
            <td>@Html.ActionLink(task.Title, "Details", "Task", new { id = task.Id.ToString() }, null)</td>
            <td>
                @task.Description
            </td>
            <td>@task.EstimatedTime</td>
            <td>@task.LeadTime</td>
            <td>@task.Responsible</td>
        </tr>
    }
    </tbody>
</table>;